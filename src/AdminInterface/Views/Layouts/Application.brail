<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=Edge">
		<title>
			<% if ?Title: %>
			${Title}
			<% else: %>
			Административный интерфейс
			<% end %>
		</title>

		${app.JS("calendar.js",
			"calendar-ru_win_.js",
			"calendar-setup.js",
			"date-ru-RU.js",
			"jquery-1.4.2.min.js",
			"jquery.validate.min.js",
			"messages_ru.js",
			"jquery-ui-1.8.6.custom.min.js",
			"jquery.maskedinput-1.2.2.min.js",
			"underscore.js",
			"backbone.js",
			"Common.js",
			"coffee-script.js")}

		${app.CSS("/App_Themes/Main/Main.css",
			"jquery-ui-1.8.6.custom.css",
			"calendar-blue.css",
			"Billing.css",
			"Table.css",
			"Block.css",
			"ValidationStyles.css",
			"Highlight.css",
			"Common.css",
			"Contacts.css",
			"form.css",
			"User.css")}
	</head>
	<body>
	<% unless ?ShowHeader: %>
		<% ShowHeader = true %>
	<% end %>
	<% if ?bredcrumbs: %>
		<div class="Navigation">
			<ul id="breadcrumb">
				<li>
					<a title="Административный интерфейс" href="${siteroot}/">
						<img class="home" src="${siteroot}/images/home.png" alt="Административный интерфейс" />
					</a>
				</li>
				<% for label, url in bredcrumbs: %>
				<li>
					<% if url: %>
					<a href="${url}">${label}</a>
					<% else: %>
					<% ShowHeader = false %>
					${label}
					<% end %>
				</li>
				<% end %>
				<% if ShowHeader and ?Title: %>
				<li>${Title}</li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<% if IsDefined("Message"): %>
		<% if Message isa string: %>
		<div class="flash notice">
			${Message}
		</div>
		<% else: %>
		<div class="flash ${Message.GetClass()}">
			${Message}
		</div>
		<% end %>
	<% end %>

	<% if ShowHeader and ?Title: %>
	<h2>${Title}</h2>
	<% end %>

	${ChildOutput}
	</body>
</html>